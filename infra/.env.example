# ==============================================================
# TorrentFlow — Environment Variables Template
# Copy to .env.local for local development.
# NEVER commit .env.local to version control.
# ==============================================================

# ── Cloudflare Account ───────────────────────────────────────
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id

# ── Workers API ──────────────────────────────────────────────
ENVIRONMENT=development
APP_DOMAIN=http://localhost:5173
API_DOMAIN=http://localhost:8787

# ── R2 Storage ───────────────────────────────────────────────
R2_BUCKET_NAME=rdm-files
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key

# ── Cloudflare Turnstile ─────────────────────────────────────
# Site key (public — safe in frontend code)
TURNSTILE_SITE_KEY=0x4AAAAA_REPLACE_ME
# Secret key (private — Workers secret only, never in code)
TURNSTILE_SECRET_KEY=0x4AAAAA_SECRET_REPLACE_ME
# Use BYPASS_FOR_DEV to skip Turnstile in local development
# TURNSTILE_SECRET_KEY=BYPASS_FOR_DEV

# ── Session & CSRF Secrets ───────────────────────────────────
# Generate: openssl rand -hex 32
SESSION_SECRET=REPLACE_WITH_32_BYTE_HEX
CSRF_SECRET=REPLACE_WITH_32_BYTE_HEX

# ── Compute Agent Auth ───────────────────────────────────────
# Shared between Workers API and all compute agents
# Generate: openssl rand -hex 32
CALLBACK_SIGNING_SECRET=REPLACE_WITH_32_BYTE_HEX
WORKER_CLUSTER_TOKEN=REPLACE_WITH_32_BYTE_HEX
WORKER_CLUSTER_URL=http://localhost:8788

# ── Frontend (Vite) ──────────────────────────────────────────
VITE_API_BASE_URL=http://localhost:8787

# ── Compute Agent ────────────────────────────────────────────
PORT=8788
WORKER_ID=agent-local-1
DOWNLOAD_DIR=/tmp/rdm-downloads
MAX_CONCURRENT_JOBS=5

# ── Upload limits ────────────────────────────────────────────
MAX_UPLOAD_BYTES=5368709120
